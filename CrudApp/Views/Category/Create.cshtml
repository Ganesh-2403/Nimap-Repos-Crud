@{
    ViewData["Title"] = "Create";
}

<h1>Create Category</h1>

<form id="categoryForm" method="post" class="mt-3">
    <div id="error-summary" class="text-danger d-none"></div>

    <div class="form-group">
        <label for="CategoryName" class="control-label">Category Name</label>
        <input type="text" id="CategoryName" name="CategoryName" class="form-control" required />
        <span id="CategoryNameError" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <p class="text-danger">@ViewBag.ErrorMessage</p>
    }
</form>

<script>
    document.getElementById("categoryForm").addEventListener("submit", function (event) {
        event.preventDefault();
        let isValid = true;

        document.getElementById("error-summary").classList.add("d-none");
        document.getElementById("error-summary").innerText = "";
        document.getElementById("CategoryNameError").innerText = "";

        let categoryName = document.getElementById("CategoryName").value.trim();

        if (!categoryName) {
            document.getElementById("CategoryNameError").innerText = "Category Name is required.";
            isValid = false;
        }

        if (!isValid) {
            document.getElementById("error-summary").innerText = "Please fix the errors above.";
            document.getElementById("error-summary").classList.remove("d-none");
        } else {
            this.submit();
        }
    });
</script>
